CREATE TABLE IF NOT EXISTS trust_scores2 (
    public_key BLOB NOT NULL,
    score INTEGER NOT NULL DEFAULT 0,
    PRIMARY KEY (public_key)
);

getAll:
SELECT public_key, score FROM trust_scores2;

addScore:
INSERT INTO trust_scores2 (public_key, score)
VALUES(?, ?);

getScore:
SELECT score FROM trust_scores2 WHERE public_key=?;

incrementScore:
UPDATE trust_scores2 SET score = score + 1 WHERE public_key=?;

